-episode-show episode=episode
  -note-list
    -if episodeTemplate
      =partial episodeTemplate

    -if episode.guest
      = guest-item name=episode.guest.name guestInfoURL=episode.guest.guestInfoURL avatarURL=episode.guest.avatarURL tagLine=episode.guest.tagLine bio=episode.guest.bio

    -each episode.showNotes as |note|
      -note-item time=note.timeStamp episode=episode
        -if note.resource.link
          -link-to-site href=note.resource.link
            -external-title
              =note.resource.title
        -else
          %h1
            =note.resource.title
        %p
          -each note.authors as |author|
            by
            -if author.link
              -link-to-site href=author.link
                = author.title
            -else
              = author.title
